{
  "name": "civic-auth-rn",
  "version": "1.0.0",
  "description": "React Native wrapper for Civic's identity authentication system",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "demo:android": "cd demo && npx react-native run-android",
    "demo:ios": "cd demo && npx react-native run-ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "civic",
    "authentication",
    "identity",
    "web3",
    "blockchain",
    "auth",
    "login"
  ],
  "author": "CivicAuth Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlbertLei-Web3/civic-auth-rn.git"
  },
  "bugs": {
    "url": "https://github.com/AlbertLei-Web3/civic-auth-rn/issues"
  },
  "homepage": "https://github.com/AlbertLei-Web3/civic-auth-rn#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "react-native-webview": "^13.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
} 